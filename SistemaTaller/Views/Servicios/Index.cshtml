@model IEnumerable<SistemaTaller.Models.Servicio>

@{
    ViewData["Title"] = "Index";
}

<h1>Servicios</h1>

<p>
    <a class="btn btn-secondary" asp-action="Create">Crear</a>
</p>
<table class="table table-bordered table-striped">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Nombre)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Descripcion)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Precio)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Nombre)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Descripcion)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Precio)
            </td>
            <td>
           

                <a asp-action="Edit" asp-route-id="@item.IdServicio"><button class="btn btn-warning"><i class="fas fa-edit"></i></button> </a>
                <a asp-action="Details" asp-route-id="@item.IdServicio"> <button class="btn btn-info"><i class="fas fa-eye"></i></button> </a>
                <a asp-action="Delete" asp-route-id="@item.IdServicio"> <button class="btn btn-danger"> <i class="fas fa-trash-alt"></i></button></a>
            </td>
        </tr>
}
    </tbody>
</table>
